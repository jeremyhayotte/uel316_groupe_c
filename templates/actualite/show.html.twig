{% extends 'base.html.twig' %}

{% block title %}{{ actualite.titre }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ actualite.titre }}</h1>
        <hr>
        {{ actualite.contenu|raw }}
        <h2 class="comment-title mt-5">
            <span id="comment-count">{{ actualite.commentaires|length }} commentaire(s)</span>
        </h2>
        <hr>
        <div class="comment-area mb-5">
            {{ form(commentForm, { 'attr': { 'class': 'comment-form' } }) }}
        </div>
    </div>
{% endblock %}
